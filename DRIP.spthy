theory DRIP

begin

builtins: hashing, asymmetric-encryption, diffie-hellman, signing

functions: kdf/1

// Anyone can register a public key at any time together with its ID
// But: only once per ID
rule Register_pk:
  [ Fr(~ltkX) ]
  --[ OnlyOnceV($X) ]->
  [
    !Ltk($X, ~ltkX)
    , !Pk($X, pk(~ltkX))
    , Out(pk(~ltkX)) 
  ] 




















end
